{
  "name": "clone-tabnews",
  "version": "1.0.0",
  "description": "Um clone para o tab news usado no curso.dev",
  "keywords": [],
  "author": "Felipe Oliveira",
  "license": "MIT",
  "main": "index.js",
  "scripts": {
    "dev": "npm run infra:up && npm run infra:wait:database && npm run migrations:up && next dev",
    "postdev": "npm run infra:stop",
    "lint:prettier:check": "prettier --check .",
    "lint:prettier:fix": "prettier --write .",
    "lint:eslint:check": "next lint",
    "test": "npm run infra:up && npx concurrently --names next,jest --hide next --kill-others -k --success command-jest \"next dev\" \"npx jest --runInBand --verbose\"",
    "posttest": "npm run infra:stop",
    "test:watch": "jest --runInBand --watchAll",
    "infra:up": "docker compose -f ./infra/compose.yaml up -d --force-recreate",
    "infra:stop": "docker compose -f ./infra/compose.yaml stop",
    "infra:down": "docker compose -f ./infra/compose.yaml down",
    "infra:wait:database": "node ./infra/scripts/wait-for-postgres.js",
    "migrations:create": "node-pg-migrate --migrations-dir infra/migrations create",
    "migrations:up": "node-pg-migrate --migrations-dir ./infra/migrations --envPath ./.env.development up",
    "prepare": "husky",
    "commit": "cz"
  },
  "dependencies": {
    "async-retry": "1.3.3",
    "dotenv": "16.4.5",
    "dotenv-expand": "11.0.6",
    "next": "14.2.10",
    "node-pg-migrate": "7.6.1",
    "pg": "8.12.0",
    "react": "18.3.1",
    "react-dom": "18.3.1"
  },
  "devDependencies": {
    "@commitlint/cli": "19.5.0",
    "@commitlint/config-conventional": "19.5.0",
    "@swc/core": "1.3.95",
    "@swc/jest": "0.2.29",
    "@types/jest": "29.5.12",
    "@types/react": "18.2.38",
    "commitizen": "4.3.0",
    "concurrently": "8.2.2",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "8.57.0",
    "eslint-config-next": "14.2.9",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-jest": "28.8.3",
    "husky": "9.1.5",
    "jest": "29.7.0",
    "prettier": "3.3.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}