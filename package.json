{
  "name": "clone-tabnews",
  "version": "1.0.0",
  "description": "Um clone para o tab news usado no curso.dev",
  "keywords": [],
  "author": "Felipe Oliveira",
  "license": "MIT",
  "main": "index.js",
  "scripts": {
    "dev": "npm run infra:up && npm run wait-for-postgres && npm run migration:up && next dev",
    "lint:check": "prettier --check .",
    "lint:fix": "prettier --write .",
    "test": "npm run infra:up && npx concurrently --names next,jest --hide next --kill-others -k --success command-jest \"next dev\" \"npx jest --runInBand\"",
    "test:watch": "jest --runInBand --watchAll",
    "infra:up": "docker compose -f ./infra/compose.yaml up -d --force-recreate",
    "infra:stop": "docker compose -f ./infra/compose.yaml stop",
    "infra:down": "docker compose -f ./infra/compose.yaml down",
    "migration:create": "node-pg-migrate --migrations-dir infra/migrations create",
    "migration:up": "node-pg-migrate --migrations-dir ./infra/migrations --envPath ./.env.development up",
    "wait-for-postgres": "node ./infra/scripts/wait-for-postgres.js"
  },
  "dependencies": {
    "async-retry": "1.3.3",
    "dotenv": "16.4.4",
    "dotenv-expand": "11.0.6",
    "next": "13.1.6",
    "node-pg-migrate": "6.2.2",
    "pg": "8.11.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@swc/core": "^1.3.95",
    "@swc/jest": "^0.2.29",
    "@types/jest": "^29.5.12",
    "@types/react": "18.2.38",
    "concurrently": "8.2.2",
    "jest": "^29.7.0",
    "prettier": "^3.0.0"
  }
}